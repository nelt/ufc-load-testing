<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {{#prevPage}}
            <li class="page-item">
                <a class="page-link" aria-label="Previous" href="?page={{prevPage}}&filter={{#filter}}{{value}}{{/filter}}">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        {{/prevPage}}
        <li class="page-item disabled">
            <span class="page-link">{{jobCount}} matching jobs</span>
        </li>
        <li class="page-item disabled">
            <span class="page-link">{{currentPage}} / {{pageCount}}</span>
        </li>
        {{#nextPage}}
            <li class="page-item">
                <a class="page-link" aria-label="Next" href="?page={{nextPage}}&filter={{#filter}}{{value}}{{/filter}}">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        {{/nextPage}}
    </ul>
</nav>